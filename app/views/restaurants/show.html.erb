<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <div class="col-8">
        <%= review.content %>
      </div>
      <div class="col-4">
        <%= review.rating %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %> |
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
